<%- include("partials/_sidebar") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column bg-gray-900">

        <!-- Main Content -->
        <div id="content">

            <%- include("partials/_header") %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-100">Tabla de usuarios</h1>

                    <br><br>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4 bg-gray-200">
                        <div class="card-header py-3 bg-primary">
                            <h6 class="m-0 font-weight-bold text-light">Usuarios</h6>
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover nowrap" id="dataTable" width="100%"
                                    cellspacing="0">
                                    <thead class="text-center bg-gray-900 text-light">
                                        <tr>
                                            <th>N° de identificación</th>
                                            <th>Nombre</th>
                                            <th>Teléfono</th>
                                            <th>Correo</th>
                                            <th>Dirección</th>
                                            <th>Ciudad</th>
                                            <th>Cargo</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        <% if (usuarios) { %>
                                            <% for(var i=0; i < usuarios.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <%= usuarios[i].id %>
                                                    </td>
                                                    <td>
                                                        <%= usuarios[i].nombre %>
                                                            <%= usuarios[i].apellido %>
                                                    </td>
                                                    <td>
                                                        <%= usuarios[i].telefono %>
                                                    </td>
                                                    <td>
                                                        <%= usuarios[i].correo %>
                                                    </td>
                                                    <td>
                                                        <%= usuarios[i].direccion %>
                                                    </td>
                                                    <td>
                                                        <%= usuarios[i].ciudad %>
                                                    </td>
                                                    <td>
                                                        <%= usuarios[i].rol_nombre %>
                                                    </td>
                                                    <td>
                                                        <a href="/update/<%= usuarios[i].id %>"
                                                            class="btn btn-info btn-icon-split btn-sm">
                                                            <span class="icon text-white-50">
                                                                <i class="fas fa-info-circle"></i>
                                                            </span>
                                                            <span class="text">Editar</span>
                                                        </a>
                                                        <!-- Botón de eliminar -->
                                                        <button class="btn btn-danger btn-icon-split btn-sm"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#eliminarUsuarioModal<%= usuarios[i].id %>">
                                                            <span class="icon text-white-50">
                                                                <i class="fas fa-trash"></i>
                                                            </span>
                                                            <span class="text">Eliminar</span>
                                                        </button>

                                                        <!-- Modal de confirmación para eliminar usuario -->
                                                        <div class="modal fade"
                                                            id="eliminarUsuarioModal<%= usuarios[i].id %>" tabindex="-1"
                                                            aria-labelledby="eliminarUsuarioModalLabel"
                                                            aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title"
                                                                            id="eliminarUsuarioModalLabel">Confirmación de eliminación
                                                                        </h5>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        ¿Está seguro que desea eliminar al usuario 
                                                                        "<%= usuarios[i].nombre %>
                                                                            <%= usuarios[i].apellido %>"?
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary"
                                                                            data-bs-dismiss="modal">Cancelar</button>
                                                                        <!-- Enlace para eliminar el usuario -->
                                                                        <a href="/delete/<%= usuarios[i].id %>"
                                                                            class="btn btn-danger">Confirmar</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <%- include("partials/_footer") %>