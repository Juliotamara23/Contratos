<%- include("partials/_header") %>

<div class="container">
  <br><br>
    <div class="table-responsive">
        <table class="table table-ms table-dark table-hover border-primary rounded-3">
          <thead>
            <tr class="text-center">
              <th scope="col">Id del contrato</th>
              <th scope="col">Nombre del contrato</th>
              <th scope="col">Departamento</th>
              <th scope="col">Valor</th>
              <th scope="col">Fecha de inicio</th>
              <th scope="col">plazo</th>
              <th scope="col">Estado</th>
              <th scope="col">Tipo</th>
              <th scope="col">Responsable</th>
              <th scope="col">Descripcion</th>
              <th scope="col">Enlace Secop</th>
              <th colspan="3" scope="col" class="table-active">Acciones</th>
            </tr>
          </thead>
          <tbody class="text-center">
            <% if (contratos) { %>
              <% for(var i=0; i < contratos.length; i++) { %>
                <tr>
                  <td>
                    <%= contratos[i].id_contrato %>
                  </td>
                  <td>
                    <%= contratos[i].nombre_contrato %>
                  </td>
                  <td>
                    <%= contratos[i].departamento %>
                  </td>
                  <td>
                    <%= contratos[i].valor %>
                  </td>
                  <td>
                    <%= contratos[i].fecha %>
                  </td>
                  <td>
                    <%= contratos[i].plazo %>
                  </td>
                  <td>
                    <%= contratos[i].nombre_estado %>
                  </td>
                  <td>
                    <%= contratos[i].nombre_tipo %>
                  </td>
                  <td>
                    <%= contratos[i].nombre %> <%= contratos[i].apellido %>
                  </td>
                  <td>
                    <%= contratos[i].descripcion %>
                  </td>
                  <td>
                    <%= contratos[i].enlacesecop %>
                  </td>
                  <td class="table-active">
                    <a href="/update_contrato/<%= contratos[i].id_contrato %>" class="btn btn-success">
                      Edit
                    </a>
                  </td>
                  <td class="table-active">
                    <a href="/delete_contrato/<%= contratos[i].id_contrato %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                  <td class="table-active">
                    <a href="/contrato_archivos/<%= contratos[i].id_contrato %>" class="btn btn-info">
                      Subir archivos
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>

</div>

<%- include("partials/_footer") %>