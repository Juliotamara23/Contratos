<%- include("partials/_sidebar") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column bg-gray-900">

        <!-- Main Content -->
        <div id="content">

            <%- include("partials/_header") %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <br><br>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4 bg-gray-200">
                        <div class="card-header py-3 bg-primary">
                            <h6 class="m-0 font-weight-bold text-light">Panel de administración de contratos</h6>
                        </div>
                        <legend class="text-center bg-gray-900 text-light border-bottom-primary">Tabla de contratos</legend>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover nowrap" id="dataTable" width="100%"
                                    cellspacing="0">
                                    <thead class="text-center bg-gray-900 text-light">
                                        <tr>
                                            <th>Id del contrato</th>
                                            <th>Nombre del contrato</th>
                                            <th>Responsable</th>
                                            <th>Departamento</th>
                                            <th>Valor $</th>
                                            <th>Fechas del contrato</th>
                                            <th>Estado</th>
                                            <th>Tipo</th>
                                            <th>Descripción</th>
                                            <th>Enlace Secop</th>
                                            <th>Acciones</th>
                                            <th>Documentos</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        <% if (contratos) { %>
                                            <% for(var i=0; i < contratos.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <div class="col-md-auto">
                                                            <%= contratos[i].id_contrato %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="col-md-auto">
                                                            <%= contratos[i].nombre_contrato %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="col-md-auto">
                                                            <%= (contratos[i].nombre && contratos[i].apellido) ?
                                                                `${contratos[i].nombre} ${contratos[i].apellido}`
                                                                : 'No hay responsable asignado' %>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <%= contratos[i].departamento %>
                                                    </td>
                                                    <td>
                                                        $ <%= contratos[i].valor %>
                                                    </td>
                                                    <td>
                                                        <div class="col-md-auto">
                                                            <span class="font-weight-bolder">Fecha inicial: </span>
                                                            <%= contratos[i].fecha %>
                                                                <br>
                                                                <span class="font-weight-bolder">Fecha final: </span>
                                                                <%= contratos[i].plazo %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <%= contratos[i].nombre_estado %>
                                                    </td>
                                                    <td>
                                                        <div class="col-md-auto">
                                                            <%= contratos[i].nombre_tipo %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <textarea class="form-floating mb-2" name=""
                                                            id="floatingTextarea2Disabled" cols="30"
                                                            placeholder="No hay una descripción" rows="2"
                                                            disabled><%= contratos[i].descripcion %></textarea>
                                                    </td>
                                                    <td>
                                                        <a href="<%= contratos[i].secop %>"
                                                            class="btn btn-primary btn-icon-split btn-sm">
                                                            <span class="icon text-ligth">
                                                                <i class="fas fa-arrow-right"></i>
                                                            </span>
                                                            <span class="text">Ir al sitio</span>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="/update_contrato/<%= contratos[i].id_contrato %>"
                                                            class="btn btn-info btn-icon-split btn-sm">
                                                            <span class="icon text-white-50">
                                                                <i class="fas fa-info-circle"></i>
                                                            </span>
                                                            <span class="text">Editar</span>
                                                        </a>
                                                        <!-- Botón de eliminar -->
                                                        <a href="#" class="btn btn-danger btn-icon-split btn-sm"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#eliminarContratoModal<%= contratos[i].id_contrato %>">
                                                            <span class="icon text-white-50">
                                                                <i class="fas fa-trash"></i>
                                                            </span>
                                                            <span class="text">Eliminar</span>
                                                        </a>

                                                        <!-- Modal de confirmación para eliminar contrato -->
                                                        <div class="modal fade"
                                                            id="eliminarContratoModal<%= contratos[i].id_contrato %>"
                                                            tabindex="-1" aria-labelledby="eliminarContratoModalLabel"
                                                            aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title"
                                                                            id="eliminarContratoModalLabel">Confirmación
                                                                            de eliminación
                                                                        </h5>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        ¿Está seguro que desea eliminar el contrato "<%=
                                                                            contratos[i].nombre_contrato %>"?
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary"
                                                                            data-bs-dismiss="modal">Cancelar</button>
                                                                        <!-- Enlace para eliminar el contrato -->
                                                                        <a href="/delete_contrato/<%= contratos[i].id_contrato %>"
                                                                            class="btn btn-danger">Confirmar</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <a href="/contrato_archivos/<%= contratos[i].id_contrato %>"
                                                            class="btn btn-secondary btn-icon-split btn-sm">
                                                            <span class="icon text-white-50">
                                                                <i class="fas fa-arrow-right"></i>
                                                            </span>
                                                            <span class="text">Subir archivos</span>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% } %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <%- include("partials/_footer") %>