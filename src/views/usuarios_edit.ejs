<%- include("partials/_header") %>

  <script type="module" src="../datos/selectCiudad.js"></script>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5 text-light offset-md-3 card bg-dark border-primary">
        <div class="card-body">
          <form action="/update/<%= usuarios.id %>" method="POST">

            <fieldset>
              <legend>Modificar usuario</legend>
              <div class="form-group">
                <label for="" class="form-label mt-4">Nombre</label>
                <input type="text" name="nombre" value="<%= usuarios.nombre %>" placeholder="Nombre"
                  class="form-control mb-3" autofocus />
              </div>
              <div class="form-group">
                <label for="" class="form-label mt-4">Apellido</label>
                <input type="text" name="apellido" value="<%= usuarios.apellido %>" placeholder="Apellido"
                  class="form-control mb-3" autofocus />
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4">Telefono</label>
                <input type="text" name="telefono" value="<%= usuarios.telefono %>" placeholder="Telefono"
                  class="form-control mb-3" />
              </div>
              <div class="form-group">
                <label for="staticEmail" class="col-sm-2 col-form-label">Correo</label>
                <input type="text" name="correo" value="<%= usuarios.correo %>" placeholder="Correo"
                  class="form-control mb-3" autofocus />
              </div>
              <div class="form-group">
                <label for="" class="form-label mt-4">Direccion</label>
                <input type="text" name="direccion" value="<%= usuarios.direccion %>" placeholder="Direccion"
                  class="form-control mb-3" />
              </div>
              <div class="form-group">
                <label for="exampleSelect1" class="form-label mt-4">Ciudad</label>
                <select class="form-select" name="ciudad" id="ciudad">
                  <option value="<%= usuarios.ciudad %>">
                    <%= usuarios.ciudad %>
                  </option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleSelect1" class="form-label mt-4">Cargo</label>
                <select class="form-select" id="rol" name="rol">
                  <option>
                    <%= usuarios.rol_nombre %>
                  </option>
                  <% roles.forEach(rol=> { %>
                    <option value="<%= rol.rol_nombre %>">
                      <%= rol.rol_nombre %>
                    </option>
                    <% }); %>
                </select>
              </div>
              <br>
              <button type="submit" class="btn btn-primary">save usuarios</button>

          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/_footer") %>